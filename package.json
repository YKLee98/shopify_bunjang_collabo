{
  "name": "bunjang-shopify-middleware-pro",
  "version": "1.2.0",
  "description": "Production-ready Middleware for Bunjang-Shopify integration with BullMQ, enhanced error handling, and security.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --inspect src/index.js",
    "lint": "eslint . --ext .js --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.js?(x)\" \"*.json\" \"*.md\"",
    "test": "echo \"Error: no test specified, please add comprehensive tests!\" && exit 0",
    "validate-config": "node src/scripts/validateConfig.js",
    "prepare": "husky install || true"
    "check:bunjang-sold": "node src/scripts/quickCheckBunjangSold.js",
    "loop:start": "./run-background.sh start",
    "loop:status": "./run-background.sh status",
    "loop:logs": "./run-background.sh logs",
  },
  "keywords": [
    "shopify",
    "bunjang",
    "ecommerce",
    "integration",
    "middleware",
    "bullmq",
    "nodejs",
    "api"
  ],
  "author": "CS Trading (AI Enhanced Pro Version)",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^5.17.1",
    "@bull-board/express": "^5.17.1",
    "@shopify/shopify-api": "^11.12.0",
    "axios": "^1.9.0",
    "body-parser": "^1.20.2",
    "bull-arena": "4.0.0",
    "bullmq": "^5.7.13",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.0.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.3.0",
    "glob": "^10.3.10",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "rimraf": "^4.4.1",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
